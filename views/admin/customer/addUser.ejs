<div class="d-flex justify-content-between flex-wrap nowrap flex-md align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Add User</h1>
    <div class="btn-toolbar mb-2 mb-md 0">
        <div class="btn-group me-2">
            <a href="/addUser" class="btn btn-sm btn-ouline-secondary">?</a>
        </div>
    </div>
</div>

<div class="col py-3">
    <div class="row">
        <div class="col">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb-item">
                    <li class="breadcrumb-item"> <a href="/adminDashboard"> Dashboard</a></li>
                    <li class="breadcrumb-item active">New User</li>
                </ol>
            </nav>
        </div>
        <div class="col text-end fw-lighter">
            <b>UserId</b>
        </div>
    </div>
</div>

<form action="/addUser" method="POST">
    <!-- row 1 -->
    <div class="row form-group mb-4">
        <div class="col">
            <label for="name">First Name</label>
            <input type="text" class="form-control" placeholder="First Name" id="name" name="name" value=""
                required>
        </div>
        <div class="col">
            <label for="username">User Name</label>
            <input type="text" class="form-control" placeholder="Last Name" id="username" name="username" value=""
                required>
        </div>
    </div>
    <!-- row 2 -->
    <div class="row form-group mb-4">
        <div class="col">
            <label for="phone">Telephone</label>
            <input type="text" class="form-control" placeholder="Telephone" id="phone" name="phone" value="" required>
        </div>
        <div class="col">
            <label for="email">Email</label>
            <input type="email" class="form-control" placeholder="Email" id="email" name="email" value="" required>
        </div>
    </div>
    <!-- row 3 -->
    <div class="row form-group mb-4">
        <div class="col">
            <label for="password">Password</label>
            <input type="text" class="form-control" placeholder="Telephone" id="password" name="password" value="" required>
        </div>
        <div class="col">
            <label for="country">Country</label>
            <input type="text" class="form-control" placeholder="Email" id="country" name="country" value="" required>
        </div>
    </div>
    <!-- row 4 -->
    <div class="row form-group mb-4 ">
        <label for="street">User Details</label>
        <textarea name="street" id="street" cols="30" rows="12" placeholder="Customer Details"></textarea>
    </div>


        <button type="submit" class="btn btn-primary"> Add Customer</button>
  

</form>
                        <!-- ------------------------------------------------------------ -->
