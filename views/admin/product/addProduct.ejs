<body>
    <%- include('../Partials/header.ejs') %>
        <div class="container-fluid">
            <div class="row">
                <%- include('../Partials/sidebar.ejs') %>
                    <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
                        <!-- ------------------------------------------------------------ -->
