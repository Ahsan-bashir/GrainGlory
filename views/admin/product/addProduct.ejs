<div class="d-flex justify-content-between flex-wrap nowrap flex-md align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Add Product</h1>
    <div class="btn-toolbar mb-2 mb-md 0">
        <div class="btn-group me-2">
            <a href="/addProductPage" class="btn btn-sm btn-ouline-secondary">?</a>
        </div>
    </div>
</div>

<div class="col py-3">
    <div class="row">
        <div class="col">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb-item">
                    <li class="breadcrumb-item"> <a href="/adminDashboard">Admin Dashboard</a></li>
                    <li class="breadcrumb-item active">New Product</li>
                </ol>
            </nav>
        </div>
        <div class="col text-end fw-lighter">
            <b>productId</b>
        </div>
    </div>
</div>

<form action="/addproduct" method="POST">
    <!-- row 1 -->
    <div class="row form-group mb-4">
        <div class="col">
            <label for="name">Product Name</label>
            <input type="text" class="form-control" placeholder="Product Name" id="name" name="name" value=""
                required>
        </div>
        <div class="col">
            <label for="price">Product Price</label>
            <input type="number" class="form-control" placeholder="Product Price" id="price" name="price" value=""
                required>
        </div>
    </div>
    <!-- row 2 -->
    <div class="row form-group mb-4">
        <div class="col">
            <label for="countInStock">Stock</label>
            <input type="number" class="form-control" placeholder="countInStock" id="countInStock" name="countInStock" value="" required>
        </div>
        <div class="col">
            <label for="description">Description</label>
            <input type="text" class="form-control" placeholder="description" id="description" name="description" value="" required>
        </div>
    </div>
    <!-- row 3 -->
    
    <div class="row form-group mb-4 ">
        <label for="rich_description">Rich Details</label>
        <textarea name="rich_description" id="rich_description" cols="30" rows="12" placeholder="Rich Details"></textarea>
    </div>

        <button type="submit" class="btn btn-primary"> Add Product</button>
  

</form>
                        <!-- ------------------------------------------------------------ -->
                        <!-- ------------------------------------------------------------ -->
                    </main>
            </div>
            
        </div>

