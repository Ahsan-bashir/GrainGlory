<head>
    <link href="/assets/output.css" rel="stylesheet">
    <title>SignUp Page</title>
    <style>
        /* Add your background image path here */
        body {
            background-image: url('/assets/images/login_signup/lg-bg.jpg');
            background-size: cover;
        }
    </style>
</head>

<body class="bg-gray-100 ">
    <div class="min-h-screen flex items-center justify-center">
        
        <!-- Logo at the Top Left -->
        <div class="absolute top-0 left-0  ">
            <img src="/assets/images/index/logo-f.png" alt="Logo" class="h-32">
        </div>
        <!-- Form Container -->
        <div class="bg-gray-400 pr-8 pl-8 mr-44 rounded-lg shadow-lg flex flex-col items-center space-x-8 ml-auto ">
            <!-- logo div -->
            <div class="self-center">
                <img class="h-32" src="/assets/images/index/logo-01.png" alt="">
            </div>
            <!-- Login Form -->
            <form class="w-96 h-96 flex flex-col " action="/user" method="POST">
                <!-- Fullname Input -->
                <div class="mb-4">
                    <label for="name" class="block text-lg font-bold text-yellow-400">Full Name :</label>
                    <input type="text" id="name" name="name"
                        class="w-full px-4 py-1 border rounded-md focus:outline-none focus:border-blue-500" required>
                </div>
                <!-- Username Input -->
                <div class="mb-4">
                    <label for="username" class="block text-lg font-bold text-yellow-400">Username :</label>
                    <input type="text" id="username" name="username"
                        class="w-full px-4 py-1 border rounded-md focus:outline-none focus:border-blue-500" required>
                </div>
                <!-- Email Input -->
                <div class="mb-4">
                    <label for="email" class="block  text-lg font-bold text-yellow-400">Email :</label>
                    <input type="email" id="email" name="email"
                        class="w-full px-4 py-1 border rounded-md focus:outline-none focus:border-blue-500" required >
                </div>
                <!-- Password Input -->
                <div class="mb-4">
                    <label for="password" class="block  text-lg font-bold text-yellow-400">Password :</label>
                    <input type="password" id="password" name="password"
                        class="w-full px-4 py-1 border rounded-md focus:outline-none focus:border-blue-500" required>
                </div>
                <!-- Submit Button -->
                <button type="submit"
                    class="w-24 mx-auto bg-yellow-400 text-white py-2 mb-3 px-4 rounded-md hover:bg-yellow-300 focus:outline-none font-bold">
                    Sign Up
                </button>
                <p class="text-white text-lg text-center ">Alredy have an account ? <a href="/login"
                        class="text-yellow-300 font-bold">login</a></p>
            </form>
        </div>
    </div>
</body>